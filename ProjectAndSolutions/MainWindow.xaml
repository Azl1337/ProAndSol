<Window x:Class="ProjectAndSolutions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAndSolutions"
        mc:Ignorable="d"
        Style="{StaticResource Window}"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ProjectAndSolutions" HorizontalAlignment="Left" VerticalAlignment="Center" 
                   Margin="40 0 0 0" FontSize="48" Foreground="{DynamicResource akcent}"/>
        <Button x:Name="BtnDevisions" Content="Подраздленения" Click="BtnDevisionsClick" HorizontalAlignment="Right" VerticalAlignment="Center"
                Margin="0 0 40 0" Width="130"/>
        <Button x:Name="BtnWorkers" Content="Работники" Click="BtnWorkersClick" HorizontalAlignment="Right" VerticalAlignment="Center" 
                Margin="0 0 40 0" Width="130" Visibility="Collapsed"/>

            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
